@model IEnumerable<SportEvents.Models.Event>

@{
    ViewBag.Title = "Seznam událostí";
}

<h2>Seznam událostí</h2>
<h3 style="text-align:center"> @TempData["notice"]</h3>
<p>
    @Html.ActionLink("Vytvořit novou událost", "Create")
</p>

<p>
    @Html.ActionLink("zpět na seznam skupin", "Index", "Groups")
</p>
    @ViewBag.Error
<table class="table">
    
    <tr>
        
        <th>
            název skupiny
        </th>
        <th>
            @Html.ActionLink("Název události", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>        
            @Html.ActionLink("Datum a čas", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>        
        <th>
            opakovaná událost do:
        </th>
        <th>
            místo
        </th>
        <th>
            popis
        </th>
        <th>
            cena
        </th>
        <th>
            opakovaná událost?
        </th>
        <th>
            interval opakování (týdny)
        </th>
        <th>
            ID skupiny
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOfEvent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepeatUntil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Repeat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interval)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrpId)
        </td>
        <td>
            @Html.ActionLink("editovat", "Edit", new { id=item.Id }) |
            @Html.ActionLink("detail", "Details", new { id=item.Id }) |
            @Html.ActionLink("smazat", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
