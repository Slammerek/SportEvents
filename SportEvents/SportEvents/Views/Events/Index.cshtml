@model IEnumerable<SportEvents.Models.Event>

@{
    ViewBag.Title = "List of Events";
}

<h2>List of Events</h2>
<h3 style="text-align:center"> @TempData["notice"]</h3>
<p>
    @Html.ActionLink("Create New Event", "Create")
</p>
    @ViewBag.Error
<table class="table">
    
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Group.Name)
        </th>
        <th>
            @Html.ActionLink("Název události", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>        
            @Html.ActionLink("Datum a čas", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.RepeatUntil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Repeat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Interval)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrpId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOfEvent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RepeatUntil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Repeat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Interval)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrpId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
