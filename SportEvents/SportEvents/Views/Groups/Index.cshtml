@model IEnumerable<SportEvents.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Seznam skupin</h2>
    <hr />

@if (Session["UserSession"] != null)
{
    <h3 style="text-align:center"> @TempData["notice"]</h3>
     /*<p>
        @Html.ActionLink("List of Events", "Index", "Events")
    </p>*/
    <p class="button-link">
        @Html.ActionLink("Nová skupina", "Create")
    </p>    
}


<table class="table" >
    <tr>
        <th>
            <h3>Název</h3>
        </th>
        <th>
            <h3>Popis</h3>
        </th>
        <th>
            <h3>ID vlastníka</h3>
        </th>
        <th>
            <h3>Počet uživatelů</h3>
        </th>
        <th>
            <h3>Začátek období</h3>
        </th>
        <th>
            <h3>Konec období</h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator) 
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfUsersInGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartOfPaymentPeriod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndOfPaymentPeriod)
        </td>
        <td>
            @Html.ActionLink("Join group", "AddUserToGroup", new { id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })

        </td>
    </tr>
}

</table>
