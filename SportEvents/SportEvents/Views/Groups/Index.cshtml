@model IEnumerable<SportEvents.Models.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Seznam skupin</h2>

@if (Session["UserSession"] != null)
{
    <h3 style="text-align:center"> @TempData["notice"]</h3>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            <h3>ID of the owner of the group</h3>
        </th>
        <th>
            <h3>Number of users within the group</h3>
        </th>
        <th>
            <h3>Start of payment period</h3>
        </th>
        <th>
            <h3>End of payment period</h3>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creator) 
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfUsersInGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartOfPaymentPeriod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndOfPaymentPeriod)
        </td>
        <td>
            @Html.ActionLink("Join group", "AddUserToGroup", new { id = item.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
