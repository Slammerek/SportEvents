@model SportEvents.Models.Group

@{
    ViewBag.Title = "Details";
}

<h2>Přidat se do skupiny </h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            název skupiny
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            popis skupiny
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Přidat se do skupiny" class="btn btn-default" /> |
            @Html.ActionLink("zpět na výpis skupin", "Index")
        </div>
    }
        
</div>
